<!--https://developers.google.com/search/docs/data-types/articles-->
<!--http://schema.org/BlogPosting-->
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "<%- post.url %>"
  },
  "headline": "<%- truncate(post.title, {length: 110}) %>",
  <% if(post.photos) { %>
  "image": {
    "@type": "ImageObject",
    "url": "<%- `${config.url}${post.photos[1]}` %>",
    "height": 360,
    "width": 728
  },
  <% } %>
  "datePublished": "<%- post.date.format() %>",
  "dateModified": "<%- post.updated.format() %>",
  "author": {
    "@type": "Person",
    "name": "Adrian Mejia"
  },
   "publisher": {
    "@type": "Organization",
    "name": "Adrian Mejia",
    "logo": {
      "@type": "ImageObject",
      "url": "<%- `${config.url}${config.logo}` %>",
      "width": 347,
      "height": 50
    }
  },
  "description": "<%- strip_html(post.excerpt) %>"
}
</script>
